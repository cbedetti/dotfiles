        #export PYTHONPATH=${PYTHONPATH}:/home/chris/local/dcmstack
        # java
        #JAVA_HOME=/usr/local/java
        #export JAVA_HOME
        #export JRE_HOME
        #export PATH
        # android-studio
        #export PATH=${PATH}:/usr/local/android-studio/bin
        # ants
        #export ANTSPATH=/home/chris/local/ants/antsbin/bin
        #export PATH=${PATH}:${ANTSPATH}
        ;;
    stark | magma)
