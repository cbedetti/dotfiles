        if [ -f ${HOME}/.dir_colors/dircolors ]
        then
            eval `dircolors ${HOME}/.dir_colors/dircolors`
        fi

        # Module settings
        module use ${HOME}/local/modulefiles
        module load anaconda
        module load fsl
        module load freesurfer
        module load matlab
